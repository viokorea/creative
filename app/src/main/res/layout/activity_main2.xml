<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#8FABDD">
    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:text="낙상이 감지되었습니다."
        android:fontFamily="@font/nexonbold"
        android:gravity="top"
        android:textSize="30dp"
        android:textColor="#000000"
        />
    <ImageView
        android:layout_width="360dp"
        android:layout_height="230dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/status_main2"/>
    <TextView
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/button1"
        android:text="현재 위치 확인"
        android:gravity="center"
        android:fontFamily="@font/nexonregular"
        android:textSize="20dp"
        android:id="@+id/txv_location"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"/>
    <TextView
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/button1"
        android:text="가정 연락"
        android:id="@+id/txv_call"
        android:gravity="center"
        android:fontFamily="@font/nexonregular"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"/>
</RelativeLayout>